<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles.css">
    <title>iTunes Search</title>
</head>
<body>
  <h1>iTunes Search</h1>

  <form action="/search" method="post">
    <label for="term">Search Term:</label>
    <input type="text" name="term" id="term" placeholder="Enter a search term">

    <label for="media">Media Type:</label>
    <select name="media" id="media">
    <option value="music">Music</option>
    <option value="podcast">Podcast</option>
    </select>
    <button type="submit">Search</button>
  </form>

  <div id="results">
    <h2>Search Results for "<%=term %>"</h2>
    <ul>
      <% results.forEach(result => { %>
        <li>
            <strong><a href="<%= result.trackViewUrl %>" target="_blank"><%= result.trackName %></a></strong> by <%= result.artistName %>
        </li>
      <% }); %>
    </ul>
  </div>
</body>
</html>
